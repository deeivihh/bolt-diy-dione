{
    "dependencies": {
        "git": {
            "version": "latest"
        },
        "node": {
            "version": "latest"
        }
    },
    "installation": [
        {
            "name": "Cloning repository",
            "type": "GIT",
            "commands": [
                { "command": "git clone https://github.com/stackblitz-labs/bolt.diy bolt" }
            ]
        },
        {
            "name": "Installing dependencies",
            "type": "SHELL",
            "commands": [
                { "command": "cd bolt" },
                { "command": "npm install" }
            ]
        }
    ],
    "start": [
        {
            "name": "Starting bolt",
            "type": "SHELL",
            "catch": "5123",
            "commands": [
                { "command": "cd bolt" },
                { "command": "npm run dev" }
            ]
        }
    ]
}
